<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ls="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/tile_green"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/textInputEditTextColor">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/toolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/importantPeople"
                android:textAllCaps="false"
                android:textColor="@color/textInputEditTextColor"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/toolbarIcon"
                app:layout_constraintRight_toRightOf="@+id/toolbarIcon"
                app:layout_constraintTop_toBottomOf="@+id/toolbarIcon" />

            <ImageView
                android:id="@+id/toolbarIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:tint="@color/Gallery"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_perm_media_black_24dp"
                android:contentDescription="@string/galleryLabel" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/peoples_key"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text=""
        android:visibility="gone"
        ls:layout_editor_absoluteY="0dp"
        ls:layout_editor_absoluteX="8dp"
        ls:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/doneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_done_green_24dp"
                app:backgroundTint="@color/loginbackground"
                android:translationZ="12dp"
                app:fabSize="normal"
                app:layout_constraintTop_toBottomOf="@+id/longDescTextInputEditText"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/longDescTextInputEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:hint="@string/longDesc"
                android:textAlignment="center"
                style="@style/textfieldbox"
                android:padding="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/longDescriptionLayout"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/longDescriptionLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shortDescriptionLayout">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="19dp"
                    android:layout_height="23dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/longDesc"
                    android:src="@drawable/ic_attach_file_black_24dp"
                    android:tint="@color/Gallery"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    ls:layout_editor_absoluteX="13dp" />

                <TextView
                    android:id="@+id/longDescTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:hint="@string/longDescSpecial"
                    app:layout_constraintLeft_toRightOf="@+id/imageView5"
                    app:layout_constraintRight_toLeftOf="@+id/playLongDescription"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp" />


                <ImageView
                    android:id="@+id/playLongDescription"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/longDesc"
                    android:onClick="onClick"
                    android:src="@drawable/ic_volume_up_black_24dp"
                    android:tint="@color/Gallery"
                    app:layout_constraintRight_toLeftOf="@+id/recordLongDescription"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:id="@+id/recordLongDescription"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/longDesc"
                    android:onClick="recordDescription"
                    android:src="@drawable/ic_mic_black_24dp"
                    android:tint="@color/Gallery"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/shortDescriptionLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personImage">

                <TextView
                    android:id="@+id/shortDescTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/shortDescTextInputEditText"
                    app:layout_constraintLeft_toLeftOf="@+id/shortDescTextInputEditText"
                    app:layout_constraintTop_toBottomOf="@+id/personRelationTextInputLayout"
                    ls:text="@string/shortDescSpecial"
                    android:layout_marginStart="4dp" />

                <ImageView
                    android:id="@+id/recordShortDescription"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/shortDesc"
                    android:onClick="recordDescription"
                    android:src="@drawable/ic_mic_black_24dp"
                    android:tint="@color/Gallery"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/playShortDescription"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/shortDesc"
                    android:onClick="onClick"
                    android:src="@drawable/ic_volume_up_black_24dp"
                    android:tint="@color/Gallery"
                    app:layout_constraintRight_toLeftOf="@+id/recordShortDescription"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/shortDescTextInputEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="50dp"
                    android:hint="@string/shortDesc"
                    android:textAlignment="textStart"
                    style="@style/textfieldbox"
                    android:padding="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/descriptionIcon"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/personRelationTextInputLayout"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.517"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/descriptionIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/shortDesc"
                    android:tint="@color/Gallery"
                    app:layout_constraintBottom_toBottomOf="@+id/shortDescTextInputEditText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/shortDescTextInputEditText"
                    app:srcCompat="@drawable/ic_attach_file_black_24dp"
                    android:layout_marginStart="8dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/personRelationTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/personNameTextInputLayout"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    style="@style/textfieldbox"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    app:layout_constraintLeft_toRightOf="@+id/relationIcon"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/personRelationTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/personRelation"
                        android:inputType="text"
                        tools:ignore="MissingPrefix" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/relationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/personRelation"
                    app:layout_constraintBottom_toBottomOf="@+id/personRelationTextInputLayout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/personRelationTextInputLayout"
                    app:srcCompat="@drawable/ic_people_black_24dp"
                    android:tint="@color/Gallery"
                    android:alpha="0.5"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/personNameTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.3"
                    style="@style/textfieldbox"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    app:layout_constraintLeft_toRightOf="@+id/nameIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintRight_toLeftOf="@+id/playShortDescription"
                    android:layout_marginRight="8dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/personNameTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/personName"
                        android:inputType="textPersonName"
                        android:background="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toRightOf="@+id/nameIcon"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingPrefix" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/nameIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/personName"
                    app:layout_constraintBottom_toBottomOf="@+id/personNameTextInputLayout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/personNameTextInputLayout"
                    app:srcCompat="@drawable/ic_person_black_24dp"
                    android:tint="@color/Gallery"
                    android:alpha="0.5"/>

            </android.support.constraint.ConstraintLayout>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/personImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_account_circle_white_24dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:civ_border_color="@color/Gallery"
                app:civ_border="true"
                app:civ_shadow_radius="24"
                app:civ_shadow="true"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>