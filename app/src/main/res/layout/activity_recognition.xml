<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ls="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/recognitionLabel"
        app:titleTextColor="@android:color/white" />

    <TextView
        android:id="@+id/recog_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text=""
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:background="@drawable/tile_red">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/personImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_account_circle_white_24dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/personName"
                    android:src="@drawable/ic_person_red_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/personNameTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/personNameTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:hint="@string/personName"
                        android:inputType="textPersonName"
                        tools:ignore="MissingPrefix" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/personRelation"
                    android:src="@drawable/ic_people_red_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/personRelationTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/personRelationTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:hint="@string/personRelation"
                        android:inputType="text"
                        tools:ignore="MissingPrefix" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/shortDesc"
                    android:src="@drawable/ic_attach_file_black_24dp" />

                <TextView
                    android:id="@+id/shortDescTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/shortDescSpecial"
                    android:layout_marginStart="40dp" />


                <ImageView
                    android:id="@+id/playShortDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/shortDesc"
                    android:src="@drawable/ic_volume_up_black_24dp"
                    android:layout_marginStart="30dp"
                    android:onClick="onClick"
                    />

                <ImageView
                    android:id="@+id/recordShortDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/shortDesc"
                    android:src="@drawable/ic_mic_black_24dp"

                    android:onClick="recordDescription"
                    />

            </LinearLayout>
            
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/shortDesc"
                android:id="@+id/shortDescTextInputEditText"
                android:layout_marginTop="10dp"
                android:paddingStart="100dp"
                android:paddingEnd="50dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/longDesc"
                    android:src="@drawable/ic_attach_file_black_24dp" />

                <TextView
                    android:id="@+id/longDescTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/longDescSpecial"
                    android:layout_marginStart="40dp" />


                <ImageView
                    android:id="@+id/playLongDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/longDesc"
                    android:src="@drawable/ic_volume_up_black_24dp"
                    android:layout_marginStart="20dp"
                    android:onClick="onClick"
                    />

                <ImageView
                    android:id="@+id/recordLongDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/longDesc"
                    android:src="@drawable/ic_mic_black_24dp"

                    android:onClick="recordDescription"
                    />

            </LinearLayout>

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/longDescTextInputEditText"
                android:hint="@string/longDesc"
                android:layout_marginTop="10dp"
                android:paddingStart="100dp"
                android:paddingEnd="50dp"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/doneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_done_black_24dp"
                android:layout_marginTop="10dp"
                android:translationZ="12dp"
                app:fabSize="normal" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>