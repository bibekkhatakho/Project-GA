<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginbackground"

    tools:context="com.project.group.projectga.activities.SignInActivity">


    <ImageView
        android:id="@+id/logoView"
        android:layout_width="368dp"
        android:layout_height="225dp"
        android:background="@drawable/logo"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="2dp" />

    <LinearLayout
        android:id="@+id/LayoutForEmail"
        android:layout_width="320dp"

        android:layout_height="50dp"
        android:background="@drawable/roundrect"
        android:orientation="horizontal"


        app:layout_constraintTop_toBottomOf="@+id/logoView">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"


            android:background="@drawable/logo"
            android:foregroundGravity="center" />

        <EditText
            android:id="@+id/emailET"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:hint="Enter Email Address"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutForPassword"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundrect"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@+id/LayoutForEmail">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"


            android:background="@drawable/logo"
            android:foregroundGravity="center" />

        <EditText
            android:id="@+id/passwordET"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="15dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/LayoutForlogin"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/LayoutForPassword">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/loginbackground"
            android:onClick="onClick"
            android:text="Login"
            android:textColor="@color/red" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@color/loginbackground"
            android:text="@string/forgotPassword"
            android:textColor="@color/green" />

    </RelativeLayout>

    <TextView
        android:id="@+id/signupTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signUp"
        android:textColor="@color/green"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/LayoutForlogin"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="475dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/google"
        app:layout_constraintTop_toBottomOf="@+id/signupTV"
        tools:layout_editor_absoluteX="67dp" />


</android.support.constraint.ConstraintLayout>