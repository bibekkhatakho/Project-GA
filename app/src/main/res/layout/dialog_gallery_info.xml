<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tile_green" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        android:textColor="@color/Gallery"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/galleryIcon"
        app:layout_constraintLeft_toRightOf="@+id/galleryIcon"
        app:layout_constraintTop_toTopOf="@+id/galleryIcon" />

    <Button
        android:id="@+id/cancelButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:text="Cancel"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/okButton"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Button
        android:id="@+id/okButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="Done"
        android:textColor="@color/Gallery"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shortLayout"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/cardView">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/longLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/longDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textMultiLine"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/longDescriptionLabel"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.478" />

            <ImageView
                android:id="@+id/playLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_volume_up_black_24dp" />

            <ImageView
                android:id="@+id/recordLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintRight_toLeftOf="@+id/playLong"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_mic_black_24dp" />

            <ImageView
                android:id="@+id/detailIcon"
                android:tint="@color/Gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_attach_file_black_24dp" />

            <TextView
                android:id="@+id/longDescriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:text="@string/longDescSpecial"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/detailIcon"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/detailIcon"
                app:layout_constraintRight_toLeftOf="@+id/recordLong"
                app:layout_constraintTop_toBottomOf="@+id/detailIcon"
                app:layout_constraintVertical_bias="0.56" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/shortLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/background"
        app:layout_constraintHorizontal_bias="0.0">

        <ImageView
            android:id="@+id/playShortDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_volume_up_black_24dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/eventName"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/eventName"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/recordPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_mic_black_24dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="@+id/eventLocation"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/eventLocation"
            android:layout_marginBottom="16dp"
            app:layout_constraintRight_toLeftOf="@+id/playShortDescription"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/recordName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_mic_black_24dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/eventName"
            app:layout_constraintTop_toTopOf="@+id/eventName"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toLeftOf="@+id/playShortDescription"
            android:layout_marginEnd="16dp" />

        <EditText
            android:id="@+id/eventDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="date"
            android:text="Event Date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/dateIcon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventLocation" />

        <ImageView
            android:id="@+id/dateIcon"
            android:tint="@color/Gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_date_range_black_24dp"
            app:layout_constraintTop_toTopOf="@+id/eventDate"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/eventDate"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="24dp" />

        <EditText
            android:id="@+id/eventLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:text="Event Location"
            app:layout_constraintLeft_toRightOf="@+id/locationIcon"
            app:layout_constraintRight_toLeftOf="@+id/recordPlace"
            app:layout_constraintTop_toBottomOf="@+id/eventName" />

        <ImageView
            android:id="@+id/locationIcon"
            android:tint="@color/Gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_place_black_24dp"
            app:layout_constraintTop_toTopOf="@+id/eventLocation"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/eventLocation"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="24dp" />

        <EditText
            android:id="@+id/eventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textCapWords"
            android:text="Event Name"
            app:layout_constraintLeft_toRightOf="@+id/eventIcon"
            app:layout_constraintRight_toLeftOf="@+id/recordName"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/eventIcon"
            android:tint="@color/Gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/eventName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/eventName"
            app:srcCompat="@drawable/ic_event_black_24dp"
            android:layout_marginStart="24dp" />
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/galleryIcon"
        android:tint="@color/Gallery"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_perm_media_black_24dp" />


</android.support.constraint.ConstraintLayout>
