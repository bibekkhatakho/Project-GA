<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">#ABADB0</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">#ABADB0</item>
        <item name ="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" / -->

    <!-- style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" / -->




    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tabsTextAppearence" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="fancyButton">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="fancyButtonProfile">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="textfieldbox">
        <item name="android:background">@drawable/textbox</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="textfieldboxPeople">
        <item name="android:background">@drawable/textbox</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="text_fab">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">15dp</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ABADB0</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/textInputEditTextColor</item>
    </style>

    <style name="customInputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingBottom">@dimen/input_label_vertical_spacing</item>
        <item name="android:paddingLeft">@dimen/input_label_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/input_label_horizontal_spacing</item>
    </style>

    <style name="custom_theme_dialog" parent="android:Theme.DeviceDefault.Light">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowBackground">@color/offWhite</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/appNameColor</item>
    </style>

</resources>
